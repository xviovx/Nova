<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:acrylic="clr-namespace:Xe.AcrylicView;assembly=Xe.AcrylicView"
             x:Class="NovaApp.Views.ProjectsPage">
    <acrylic:AcrylicView CornerRadius="50"
           TintColor="#FFFFFF" 
           TintOpacity="0.2"
        BorderColor="Transparent"
           Padding="20">
        <Grid>


            <!-- Column 1, Row 1: Client Page Text -->
            <Label 
                Text="Staff"
                Padding="20,15,20,0"
                FontSize="40"
                FontAttributes="Bold"
                Grid.Row="0"
                Grid.Column="0" />
            <Label 
                Text="List"
                Padding="125,15,20,0"
                FontSize="40"
                FontAttributes="None"
                FontFamily="PoppinsThin"
                Grid.Row="0"
                Grid.Column="0" />

            <!-- Column 1, Row 2: "Let's get an overview" Text -->
            <Label 
                Text="Let's get an overview!"
                Padding="20,70,0,0"
                FontSize="16"
                Grid.Row="1"
                Grid.Column="0" />

            <!-- Column 1, Row 3: Container for client cards -->
            <Grid BackgroundColor="Transparent" Margin="0,20,0,0">
                <Border BackgroundColor="Transparent" StrokeThickness="0" WidthRequest="410" HeightRequest="315" HorizontalOptions="Start" Margin="20,0,0,0">
                    <Border.Shadow>
                        <Shadow Brush="#E9E9E9"
                   Offset="10,10"
                   Radius="20"
                   Opacity="1"/>
                    </Border.Shadow>
                    <Frame CornerRadius="20" BorderColor="Transparent" BackgroundColor="White">
                        <Grid>
                            <!-- Row 1: Profile Image and Company Name -->
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>
                            <Image Source="Assets/ProfileImages/1.png" WidthRequest="70" Grid.Row="0" Grid.Column="0"></Image>
                            <Label Text="Tannie Bettie" FontSize="24" FontAttributes="Bold" Margin="15,15,0,0" Grid.Row="0" Grid.Column="1"/>
                            <Image Source="Assets/Icons/moreInfo.png" WidthRequest="80" Margin="230,-5,0,0" Grid.Row="0" Grid.Column="2"/>

                            <!-- Row 2: Email -->
                            <Label Text="Tannibetty@gmail.com" FontSize="16" TextColor="#7D8DA6" Margin="15,-20,0,0" Grid.Row="1" Grid.Column="1" />

                            <!-- Row 3: Web Designer and Tech Lead -->
                            <StackLayout Orientation="Horizontal" Margin="5,20,0,0" Grid.Row="2" Grid.Column="1">
                                <Frame CornerRadius="18" BackgroundColor="Transparent" Padding="10" Margin="0,0,10,0" BorderColor="#FF7070" WidthRequest="140">
                                    <Label Text="WEB DESIGNER" TextColor="#FF7070" FontSize="12" CharacterSpacing="3" FontAttributes="Bold" HorizontalTextAlignment="Center"/>
                                </Frame>
                                <Frame CornerRadius="18" BackgroundColor="#FF7070" Padding="10" BorderColor="#FF7070" WidthRequest="110">
                                    <Label Text="TECH LEAD" TextColor="White" FontSize="12" CharacterSpacing="3" FontAttributes="Bold" HorizontalTextAlignment="Center"/>
                                </Frame>
                            </StackLayout>

                            <!-- Row 4: Salary and Project -->
                            <StackLayout Orientation="Horizontal" Margin="0,20,0,0" Grid.Row="3" Grid.Column="1" Grid.ColumnSpan="2">
                                <Frame CornerRadius="20" BackgroundColor="#B9DDFF" BorderColor="Transparent" Margin="0,0,10,0" WidthRequest="130" HeightRequest="120" >
                                    <Grid BackgroundColor="#B9DDFF">
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="*" />
                                            <RowDefinition Height="Auto" />
                                        </Grid.RowDefinitions>
                                        <Image Source="Assets/Icons/salary.png" Grid.Row="0" Grid.Column="0" WidthRequest="80" VerticalOptions="CenterAndExpand" ></Image>
                                        <Label Text="R12 000 /m" FontSize="14" HorizontalTextAlignment="Center" Grid.Row="1" Grid.Column="0" TextColor="#8BACCA" Margin="0,10,0,0"/>
                                    </Grid>
                                </Frame>
                                <Frame CornerRadius="20" BackgroundColor="#B9DDFF" BorderColor="Transparent" WidthRequest="130" HeightRequest="120" >
                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="*" />
                                            <RowDefinition Height="Auto" />
                                        </Grid.RowDefinitions>
                                        <Image Source="Assets/Icons/project.png" Grid.Row="0" Grid.Column="0" WidthRequest="80" VerticalOptions="CenterAndExpand"></Image>
                                        <Label Text="24 Projects" FontSize="14" HorizontalTextAlignment="Center" Grid.Row="1" Grid.Column="0" TextColor="#8BACCA" Margin="0,10,0,0"/>
                                    </Grid>
                                </Frame>
                            </StackLayout>
                        </Grid>
                    </Frame>
                </Border>
            </Grid>
            <!-- Column 2, Row 1: Button -->
            <Button 
                Text="+ Add New"
                WidthRequest="150"
                HeightRequest="50"
                Grid.Row="0"
                Grid.Column="1"
                Margin="290,-495,0,0"
                CornerRadius="20"/>

            <!-- Column 3, All Rows: Client Info Block (Right-aligned) -->
            <Border BackgroundColor="Transparent" StrokeThickness="0" WidthRequest="310"          
                Grid.Row="0"
                Grid.RowSpan="2"
                Grid.Column="2"
                HorizontalOptions="End"
                HeightRequest="544" >
                <Border.Shadow>
                    <Shadow Brush="#FF7070"
                           Offset="5,10"
                           Radius="20"
                           Opacity="0.5"/>
                </Border.Shadow>
                <Frame 
                BackgroundColor="#FF7070" 
                CornerRadius="30" 
                WidthRequest="310" 
                HeightRequest="544" 
                BorderColor="Transparent"
                Grid.Row="0"
                Grid.RowSpan="2"
                Grid.Column="2"
                HorizontalOptions="End">


                    <StackLayout Orientation="Vertical">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="0" />
                                <ColumnDefinition Width="300" />
                            </Grid.ColumnDefinitions>



                            <Grid Grid.Column="1" Padding="0,15,0,15">
                                <!-- Row 1: Company Name and Image -->
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>



                                <Image Source="Assets/ProfileImages/1.png" WidthRequest="70"  Grid.Column="0" HorizontalOptions="Start"></Image>
                                <Image Source="Assets/Icons/edit.png" WidthRequest="35" Grid.Column="1" Margin="150,-28,0,0" />
                            </Grid>
                        </Grid>

                        <Label Text="Company Name" FontSize="24" FontAttributes="Bold" Grid.Column="0" Margin="5,0,0,0" />



                        <!-- Row 2: Email -->
                        <Label Text="Company@email.com" FontSize="16" TextColor="White" Margin="5,10,0,0" />

                        <!-- Row 3: Positions -->
                        <StackLayout Orientation="Horizontal" Margin="5,20,0,0" Grid.Row="2" Grid.Column="1">
                            <Frame CornerRadius="18" BackgroundColor="White" Padding="10" Margin="0,0,10,0" BorderColor="#FF7070" WidthRequest="140">
                                <Label Text="WEB DESIGNER" TextColor="#FF7070" FontSize="12" CharacterSpacing="3" FontAttributes="Bold" HorizontalTextAlignment="Center"/>
                            </Frame>
                            <Frame CornerRadius="18" BackgroundColor="#FF7070" Padding="10" BorderColor="White" WidthRequest="110">
                                <Label Text="TECH LEAD" TextColor="White" FontSize="12" CharacterSpacing="3" FontAttributes="Bold" HorizontalTextAlignment="Center"/>
                            </Frame>
                        </StackLayout>

                        <!-- Row 4: Salary  -->


                        <Label Text="Salary:" FontSize="14" HorizontalTextAlignment="Start" Margin="0,20,0,0" TextColor="White" FontAttributes="Bold"/>

                        <Frame  Margin="0,10,0,0" BackgroundColor="#FF8D8D"  BorderColor="Transparent" CornerRadius="20" Padding="20,10,10,10">
                            <Label Text="R12 000 /m" FontSize="14" HorizontalTextAlignment="Start"   TextColor="White" />
                        </Frame>





                        <Label Text="Current Projects" FontSize="14" HorizontalTextAlignment="Start" TextColor="White" Margin="0,20,0,0">
                            <Label.FormattedText>
                                <FormattedString>
                                    <Span Text="Current" FontSize="14" FontAttributes="Bold" />
                                    <Span Text=" Projects" FontSize="14" />
                                </FormattedString>
                            </Label.FormattedText>
                        </Label>

                        <!-- TODO: Horizontal Carousel -->



                        <Label Text="Past Projects" FontSize="14" HorizontalTextAlignment="Start" TextColor="White" Margin="0,20,0,0">
                            <Label.FormattedText>
                                <FormattedString>
                                    <Span Text="Past" FontSize="14" FontAttributes="Bold" />
                                    <Span Text=" Projects" FontSize="14" />
                                </FormattedString>
                            </Label.FormattedText>
                        </Label>

                    </StackLayout>
                </Frame>
            </Border>
        </Grid>
    </acrylic:AcrylicView>
</ContentView>
