<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="NovaApp.Views.LoginPage"
              xmlns:acrylic="clr-namespace:Xe.AcrylicView;assembly=Xe.AcrylicView">

    <Grid>
        <!-- Background Image -->
        <Image Source="Assets/BackgroundImageLogin.png" Aspect="AspectFill" />


        <acrylic:AcrylicView CornerRadius="50"
           WidthRequest="420"
           HeightRequest="450"
           TintColor="#FFFFFF" 
           TintOpacity="0.2"
           BorderColor="Transparent"
           Padding="20">
            <StackLayout>
                <Label Text="Login"/>
                <Entry Placeholder="Username" x:Name="UsernameEntry" />
                <Entry Placeholder="Password" x:Name="PasswordEntry" IsPassword="True" />
                <Button Text="Login" Clicked="OnLoginButtonClicked" />
            </StackLayout>
        </acrylic:AcrylicView>
    </Grid>
</ContentPage>